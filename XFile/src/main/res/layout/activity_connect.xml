<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 链接界面-->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/_dp_20"
        android:background="@drawable/white_round_shape"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_260"
            android:background="@mipmap/connect_sketch_group">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="连朋友，传文件"
                android:textColor="@color/group_header_select_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_close_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_85"
                android:text="“加入我们”"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_70"
                android:text="“我建连接”"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/blue_selector"
                android:text="创建连接"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <Button
                android:id="@+id/search_join"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/orange_selector"
                android:text="搜索加入"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>


    </LinearLayout>

    <!-- 扫描界面-->
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/_dp_20"
        android:background="@drawable/white_round_shape"
        android:orientation="vertical"
        android:visibility="invisible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="正在搜索可链接的朋友"
                android:textColor="@color/group_header_select_color"
                android:textSize="@dimen/sp_16" />


            <ImageView
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_260"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@mipmap/connect_radar" />

            <ProgressBar
                android:id="@+id/prg_scanning"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_260"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_50"
                android:indeterminateDrawable="@drawable/progress_scanning" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/search_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/gray_selector"
                android:text="取消搜索"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/sp_17" />


        </LinearLayout>


    </LinearLayout>

    <!-- 扫描失败-->
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/_dp_20"
        android:background="@drawable/white_round_shape"
        android:orientation="vertical"
        android:visibility="invisible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_260">

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="可链接的朋友"
                android:textColor="@color/group_header_select_color"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_refresh_selector" />


            <ImageView
                android:layout_width="320dp"
                android:layout_height="@dimen/dp_250"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@mipmap/connect_sketch_nobody" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_135"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有找到可链接的人?"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.点击刷新按钮,重新搜索"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.或点击返回,建个链接让朋友来找你"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/sp_12" />

            <Button
                android:id="@+id/search_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/gray_selector"
                android:text="返回"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/sp_17" />


        </LinearLayout>


    </LinearLayout>

    <!-- 设备列表-->
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/_dp_20"
        android:background="@drawable/white_round_shape"
        android:orientation="vertical"
        android:visibility="invisible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="可链接的朋友"
                android:textColor="@color/group_header_select_color"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:id="@+id/refresh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_refresh_selector" />


            <ListView
                android:id="@+id/lv_device"
                android:layout_width="320dp"
                android:layout_height="@dimen/dp_250"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_50"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="vertical">



            <Button
                android:id="@+id/connect_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/gray_selector"
                android:text="返回"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/sp_17" />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>
